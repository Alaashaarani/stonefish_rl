<?xml version="1.0"?>
<scenario>

    <environment>
        <ned latitude="40.0" longitude="3.0"/>
    </environment>

    <materials>
        <material name="Ground" density="1000.0" restitution="0.5"/>
        <material name="Steel" density="7850.0" restitution="0.1"/>
        <friction_table>
			<friction material1="Ground" material2="Ground" static="0.5" dynamic="0.3"/>
			<friction material1="Steel" material2="Steel" static="0.5" dynamic="0.3"/>
			<friction material1="Ground" material2="Steel" static="0.5" dynamic="0.3"/>
		</friction_table>
    </materials>

    <looks>
        <look name="grid" gray="1.0" roughness="0.4" metalness="0.5"/>
        <look name="dark" rgb="0.1 0.1 0.1" roughness="0.5" metalness="0.0"/>
        <look name="green" rgb="0.1 0.8 0.1" roughness="0.5" metalness="0.0"/>
        <look name="yellow" rgb="1.0 0.8 0.1" roughness="0.5" metalness="0.0"/>
    </looks>

 
    <!-- The ground -->
    <static name="floor" type="plane">
        <material name="Steel"/>
        <look name="gray"/>
        <world_transform xyz="7.0 0.0 1.0" rpy="0.0 0.0 0.0"/>
    </static>


    <!-- Robot 1 -->
    <robot name="Robot1" fixed="true" self_collisions="false">
        <base_link name="Base" type="sphere" physics="surface">
            <dimensions radius="0.2"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <material name="Steel"/>
            <look name="yellow"/>
        </base_link>

        <link name="Link1" type="box" physics="surface">
            <dimensions xyz="0.1 0.02 0.5"/>
            <origin xyz="0.0 0.0 -0.2" rpy="0.0 0.0 3.1415"/>
            <material name="Steel"/>
            <look name="dark"/>
        </link>
        
        <link name="Link2" type="box" physics="surface">
            <dimensions xyz="0.1 0.02 0.5"/>
            <origin xyz="0.0 0.0 -0.2" rpy="0.0 0.0 3.1415"/>
            <material name="Steel"/>
            <look name="dark"/>
        </link>

        <joint name="Joint1" type="revolute">
            <parent name="Base"/>
            <child name="Link1"/>
            <origin xyz="0.2 0.25 -0.2" rpy="0.0 0.0 0.0"/>
            <axis xyz="0.0 1.0 0.0"/>
        </joint>

        <joint name="Joint2" type="revolute">
            <parent name="Link1"/>
            <child name="Link2"/>
            <origin xyz="0.2 -0.25 -0.2" rpy="0.0 0.0 0.0"/>
            <axis xyz="0.0 1.0 0.0"/>
        </joint>

        <actuator name="Motor" type="motor"

        <actuator name="Servo1" type="servo">
            <controller position_gain="2100.0" velocity_gain="5.0" max_torque="100.0"/> 
            <joint name="Joint1"/>
        </actuator>

        <actuator name="Servo2" type="servo">
            <controller position_gain="2100.0" velocity_gain="5.0" max_torque="100.0"/>
            <joint name="Joint2"/>
        </actuator>

        <sensor name="Encoder1" type="encoder">
            <joint name="Joint1"/>
            <history samples="1000"/>
        </sensor>

         <sensor name="Encoder2" type="encoder">
            <joint name="Joint2"/>
            <history samples="1000"/>
        </sensor>
        <world_transform xyz="0.0 0.0 -2.0" rpy="0.0 0.0 0.0"/>
    </robot>

    <!-- Robot 2 -->
    <robot name="Robot2" fixed="false" self_collisions="false">


        <world_transform xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>


</scenario>